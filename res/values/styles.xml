<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 为大主题设置activitiy启动关闭动画 -->
    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
	    <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
	    <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
	    <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
	    <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
	</style>
    
    <!-- 无标题Dialog -->
    <style name="DialogTheme" parent="android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/layout_dialog_back</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- keyboard动画 -->
    <style name="KeyBoardInOutAnimation">  
	     <item name="android:windowEnterAnimation">@anim/keyboard_in</item>  
	     <item name="android:windowExitAnimation">@anim/keyboard_out</item>  
	</style>  
	
    <!-- ListSelect动画 -->
    <style name="ListSelectInOutAnimation">  
	     <item name="android:windowEnterAnimation">@anim/listselect_in</item>  
	     <item name="android:windowExitAnimation">@anim/listselect_out</item>  
	</style> 
	
    <!-- PullSeek动画 -->
    <style name="PullSeekInOutAnimation">  
	     <item name="android:windowEnterAnimation">@anim/pull_seek_in</item>  
	     <item name="android:windowExitAnimation">@anim/pull_seek_out</item>  
	</style>
	
    <!-- PictureShower动画 -->
    <style name="PictureShowerInOutAnimation">  
	     <item name="android:windowEnterAnimation">@anim/picture_in</item>  
	     <item name="android:windowExitAnimation">@anim/picture_out</item>  
	</style>  
	
    <!-- ShowDetailGoods动画 -->
    <style name="ShowDetailGoodsInOutAnimation">  
	     <item name="android:windowEnterAnimation">@anim/picture_in</item>  
	     <item name="android:windowExitAnimation">@anim/popup_out</item>  
	</style>

</resources>
