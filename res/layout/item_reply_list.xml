<?xml version="1.0" encoding="utf-8"?>

<!-- 好友列表item -->

<RelativeLayout   
	xmlns:android="http://schemas.android.com/apk/res/android"    
	xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	>  
    <RelativeLayout
	    android:id="@id/users_show_layout"
	    android:layout_height="70dp"   
		android:layout_width="match_parent"
		android:layout_margin="4dp"
		android:background="@drawable/dynamic_trade_menu_item"
	    >
		<com.zjcql.rebuildview.CircleImageView
		   	android:id="@id/icon"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_marginLeft="16dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:clickable="false"
		    android:src="@drawable/icon"
          	app:border_width="2dp"
          	app:border_color="@color/icon_border"
		    />
		<TextView
		    android:id="@id/name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/icon"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="16dp"
		    android:textSize="14sp"
		    android:text="测试账号" />
		<ImageView 
            android:id="@id/has_new"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/msg_tips"
            />
	</RelativeLayout>

</RelativeLayout>