<?xml version="1.0" encoding="utf-8"?>

<!-- 吐槽墙item -->

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="wrap_content"   
	android:layout_width="match_parent"
    >
	<LinearLayout  
	    android:id="@id/layout_menu" 
		android:layout_height="wrap_content"   
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:padding="1dp"
		android:layout_marginLeft="6dp"
		android:layout_marginTop="4dp"
		android:layout_marginRight="6dp"
		android:background="@drawable/cardback_pro"
		>  
		<RelativeLayout
		    android:id="@id/users_show_layout"
		    android:layout_height="40dp"   
			android:layout_width="match_parent"
			android:layout_margin="9dp"
		    >
			<com.zjcql.rebuildview.CircleImageView
			   	android:id="@id/icon"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    android:clickable="false"
			    android:src="@drawable/icon"
	          	app:border_width="1dp"
	          	app:border_color="@color/icon_border"
			    />
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    android:layout_alignParentTop="true"
			    android:layout_marginLeft="10dp"
			    android:layout_toRightOf="@id/icon"
			    >
			    <TextView
			    android:id="@id/name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:textSize="12sp"
			    android:text="测试账号" />
			<TextView
			    android:id="@id/time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:textColor="@color/gray"
			    android:textSize="12sp"
			    android:text="17分钟前" />
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout 
		    android:layout_height="wrap_content"   
			android:layout_width="match_parent"
			android:layout_margin="9dp"
			>
		    <TextView 
		        android:id="@id/content"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:lineSpacingMultiplier="1.1"
		        android:text="考虑实际付款了多少积分快速健康疗法但是上课了房间看电视索福克勒斯地方势力房价快速"
		        />
		</RelativeLayout>
		<com.zjcql.rebuildview.GridViewPro
	       android:id="@id/grid"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="1dp"
	       android:layout_marginRight="1dp"
	       android:layout_marginBottom="4dp"
	       android:numColumns="3"
	       android:verticalSpacing="1dp"
	    android:scrollbars="none"/>
	</LinearLayout>
</RelativeLayout>