<?xml version="1.0" encoding="utf-8"?>

<!-- 商品详细信息popup布局 -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
   	>
   	<RelativeLayout
	    android:id="@id/bar"
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:background="@color/primary"
	    >
	    <RelativeLayout
	        android:id="@id/back"
	        android:layout_width="50dp" 
	        android:layout_height="50dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/dynamic_small_button"
	        >
	        <ImageView
		        android:layout_width="18dp"
		        android:layout_height="18dp"
		        android:layout_centerInParent="true"
		        android:background="@drawable/arrow_left" />
	    </RelativeLayout>
	    
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toRightOf="@id/back"
	        android:layout_marginLeft="5dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:text="详细信息" />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_height="match_parent"   
		android:layout_width="match_parent"
		android:background="@color/parens_back"
	    >
		<ScrollView   
			android:layout_height="match_parent"   
			android:layout_width="match_parent"
		    >
		    <!-- 下面布局可看成是一个CardView -->
			<RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		    	android:padding="2dp"
		        android:layout_margin="10dp"
		       	android:background="@drawable/cardback_pro"
			    >
			    <!-- CardView的实际使用层 -->
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    >
				    <RelativeLayout 
				        android:layout_width="match_parent"
				        android:layout_height="160dp"
				        >
					    <ImageView 
					        android:id="@id/image"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
					        android:background="@drawable/user_back_small"
					        android:scaleType="centerCrop"
					        />
					    <TextView 
					        android:id="@id/title"
					        android:layout_width="match_parent"
					    	android:layout_height="wrap_content"
					    	android:layout_alignParentBottom="true"
					    	android:layout_margin="16dp"
					    	android:text="掌上校园App使用手册"
					    	android:textColor="@color/white"
					    	android:textSize="18sp"
					    	android:lineSpacingMultiplier="1.1"
					        />
				    </RelativeLayout>
				    <RelativeLayout
					    android:id="@id/users_show_layout"
					    android:layout_height="40dp"   
						android:layout_width="match_parent"
						android:layout_margin="16dp"
					    >
						<com.zjcql.rebuildview.CircleImageView
						   	android:id="@id/icon"
						    android:layout_width="40dp"
						    android:layout_height="40dp"
						    android:layout_alignParentLeft="true"
						    android:layout_alignParentTop="true"
						    android:clickable="false"
						    android:src="@drawable/icon"
				          	app:border_width="1dp"
				          	app:border_color="@color/icon_border"
						    />
						<LinearLayout 
						    android:layout_width="wrap_content"
						    android:layout_height="match_parent"
						    android:orientation="vertical"
						    android:layout_alignParentTop="true"
						    android:layout_marginLeft="10dp"
						    android:layout_toRightOf="@id/icon"
						    >
						    <TextView
						    android:id="@id/name"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_weight="1"
						    android:textSize="12sp"
						    android:text="测试账号" />
						<TextView
						    android:id="@id/time"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_weight="1"
						    android:textColor="@color/gray"
						    android:textSize="12sp"
						    android:text="17分钟前" />
						</LinearLayout>
				
						<TextView
						    android:id="@id/pop"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignParentRight="true"
						    android:layout_alignParentTop="true"
						    android:layout_marginTop="5dp"
						    android:textColor="@color/primary"
						    android:textSize="16sp"
						    android:text="0"
						    android:background="@drawable/dynamic_pop_button" />
				
					</RelativeLayout>
					<TextView 
					    android:id="@id/content"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_margin="16dp"
					    android:text="恢复复就是客户啊回复可见的说法dfhasljfldsjflksjdfkljsfds恢复杜绝发生的ljsfds恢复杜绝发生的回复可见啊哈空间啊沙发萨福克郡啊沙发沙发里撒娇的粉红色快捷回复就是客户反馈技术的回复可见的说法萨福克郡啊沙发沙发里撒娇的粉红色快捷回复就是客户反馈技术的回复可见的说法"
					    android:lineSpacingMultiplier="1.1"
					    />
				</LinearLayout>
			</RelativeLayout>
		</ScrollView>
		<LinearLayout 
	  	    android:layout_width="match_parent"
	        android:layout_height="5dp"
	        android:background="@drawable/appbar" />
	</RelativeLayout>
</LinearLayout>