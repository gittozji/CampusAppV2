<?xml version="1.0" encoding="utf-8"?>

<!-- 商品详细信息popup布局 -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   	>
   	<RelativeLayout
	    android:id="@id/bar"
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:background="@color/primary"
	    >
	    <RelativeLayout
	        android:id="@id/back"
	        android:layout_width="50dp" 
	        android:layout_height="50dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/dynamic_small_button"
	        >
	        <ImageView
		        android:layout_width="18dp"
		        android:layout_height="18dp"
		        android:layout_centerInParent="true"
		        android:background="@drawable/arrow_left" />
	    </RelativeLayout>
	    
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toRightOf="@id/back"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:text="详细信息" />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    <RelativeLayout 
		    android:layout_height="match_parent"   
			android:layout_width="match_parent"
			android:background="@color/parens_back"
		    >
		    <RelativeLayout 
			    android:id="@id/lay_bottom"
			    android:layout_width="match_parent"
			    android:layout_height="60dp"
			    android:layout_alignParentBottom="true"
			    android:orientation="horizontal"
			    android:background="@drawable/layout_bottom_shadow"
			    android:visibility="gone"		    
			    >
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="50dp"
			        android:layout_alignParentBottom="true"
			        android:orientation="horizontal"
			        >
		
			        <Button
			            android:id="@id/button1"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:text="删除"
			            android:textColor="@color/primary_dark"
			            android:background="@drawable/dynamic_sign_button" />
			        
			        <Button
			            android:id="@id/button2"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="2"
			            android:text="联系发布者"
			            android:textColor="@color/white"
			            android:background="@drawable/dynamic_log_button" />
		
			    </LinearLayout>
			</RelativeLayout>
			<ScrollView   
				android:layout_height="match_parent"   
				android:layout_width="match_parent"
				android:layout_alignParentTop="true"
				android:layout_above="@id/lay_bottom"
				android:layout_marginBottom="-5dp"
			    >
			    <!-- requestFocus标签和focusable、focusableInTouchMode属性是取消editText自动获取焦点 -->
				<LinearLayout     
					android:layout_height="match_parent"   
					android:layout_width="match_parent"
					android:orientation="vertical"
					android:focusable="true"
					android:focusableInTouchMode="true" >
					<requestFocus />
					<!-- 标题 -->
					<LinearLayout
						android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						android:orientation="horizontal"
						android:padding="1dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="5dp"
						android:layout_marginTop="10dp"
						android:background="@drawable/cardback_pro"
						>  
						<RelativeLayout 
						    android:layout_height="wrap_content"   
							android:layout_width="match_parent"
							android:layout_margin="9dp"
							>
						    <TextView 
						        android:id="@id/one"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:layout_marginBottom="10dp"
						        android:maxLines="2"
						        android:ellipsize="end"
						        android:textSize="12sp"
						        android:textColor="@color/primary"
						        android:text="商品标题:"
						        />
						    <TextView 
					            android:id="@id/title"
					            android:layout_width="match_parent"
					            android:layout_height="wrap_content"
					            android:layout_below="@id/one"
					            android:background="@null"
					            android:textSize="16sp"
					            android:textColor="@color/primary_text"
					            android:hint="......"
					            android:lineSpacingMultiplier="1.1"
					            />
						</RelativeLayout>
					</LinearLayout>
					<!-- 详细描述 -->
					<LinearLayout   
						android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						android:orientation="vertical"
						android:padding="1dp"
						android:layout_margin="10dp"
						android:background="@drawable/cardback_pro"
						>  
						<RelativeLayout
						    android:id="@id/users_show_layout"
						    android:layout_height="30dp"   
							android:layout_width="match_parent"
							android:layout_marginTop="9dp"
							android:layout_marginLeft="9dp"
							android:layout_marginRight="9dp"
						    >
						    <TextView 
						        android:id="@id/one"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:layout_marginBottom="10dp"
						        android:maxLines="2"
						        android:ellipsize="end"
						        android:textSize="12sp"
						        android:textColor="@color/primary"
						        android:text="问题简述:"
						        />
					
						</RelativeLayout>
						<RelativeLayout 
						    android:id="@id/layout_menu"
						    android:layout_height="wrap_content"   
							android:layout_width="match_parent"
							android:layout_marginLeft="9dp"
							android:layout_marginRight="9dp"
							android:layout_marginBottom="9dp"
							>
						    <TextView 
						        android:id="@id/content"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:background="@null"
							    android:textSize="14sp"
							    android:hint="......"
							    android:lineSpacingMultiplier="1.1"
						        />
						</RelativeLayout>
						<com.zjcql.rebuildview.GridViewPro
					       android:id="@id/grid"
					       android:layout_width="match_parent"
					       android:layout_height="wrap_content"
					       android:layout_marginLeft="1dp"
					       android:layout_marginRight="1dp"
					       android:layout_marginBottom="4dp"
					       android:numColumns="3"
					       android:verticalSpacing="1dp"
					    android:scrollbars="none"/>
					</LinearLayout>
					<!-- 选项选择 -->
					<LinearLayout
						android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						android:orientation="vertical"
						android:paddingLeft="15dp"
						android:paddingRight="15dp"
						android:paddingTop="10dp"
						android:paddingBottom="10dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="5dp"
						android:layout_marginTop="5dp"
						android:background="@drawable/cardback_pro"
						> 
				
						<RelativeLayout 
						    android:id="@id/lay_price"
						    android:layout_width="match_parent"
						    android:layout_height="50dp"
						    android:clickable="true"
						    android:background="@drawable/dynamic_trade_menu_item"
						    >
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:text="价格:"
						        />
						    <TextView 
						        android:id="@+id/price"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:layout_marginLeft="100dp"
						        android:textColor="@color/secondary_text"
						        android:text="0元"
						        />
						    <ImageView 
						        android:layout_width="10dp"
						        android:layout_height="20dp"
						        android:layout_alignParentRight="true"
						        android:layout_centerVertical="true"
						        android:background="@drawable/arrow"
						        />
						</RelativeLayout>
						
						<LinearLayout 
						    android:layout_width="match_parent"
						    android:layout_height="1px"
						    android:background="#33000000"
						    />
						
						<RelativeLayout 
						    android:id="@id/lay_state"
						    android:layout_width="match_parent"
						    android:layout_height="50dp"
						    android:clickable="true"
						    android:background="@drawable/dynamic_trade_menu_item"
						    >
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:text="成色:"
						        />
						    <TextView 
						        android:id="@id/state"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:layout_marginLeft="100dp"
						        android:textColor="@color/secondary_text"
						        android:text="全新"
						        />
						    <ImageView 
						        android:layout_width="10dp"
						        android:layout_height="20dp"
						        android:layout_alignParentRight="true"
						        android:layout_centerVertical="true"
						        android:background="@drawable/arrow"
						        />
						</RelativeLayout>
						
						<LinearLayout 
						    android:layout_width="match_parent"
						    android:layout_height="1px"
						    android:background="#33000000"
						    />
						
						<RelativeLayout 
						    android:id="@id/lay_classify"
						    android:layout_width="match_parent"
						    android:layout_height="50dp"
						    android:clickable="true"
						    android:background="@drawable/dynamic_trade_menu_item"
						    >
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:text="分类:"
						        />
						    <TextView 
						        android:id="@id/classify"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:layout_marginLeft="100dp"
						        android:textColor="@color/secondary_text"
						        android:text="其他"
						        />
						    <ImageView 
						        android:layout_width="10dp"
						        android:layout_height="20dp"
						        android:layout_alignParentRight="true"
						        android:layout_centerVertical="true"
						        android:background="@drawable/arrow"
						        />
						</RelativeLayout>
						<RelativeLayout 
						    android:id="@id/select"
						    android:layout_width="match_parent"
						    android:layout_height="50dp"
						    android:clickable="true"
						    android:background="@drawable/dynamic_trade_menu_item"
						    >
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:text="类型:"
						        />
						    <TextView 
						        android:id="@id/type"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:layout_marginLeft="100dp"
						        android:textColor="@color/secondary_text"
						        android:text="出售"
						        />
						    <ImageView 
						        android:layout_width="10dp"
						        android:layout_height="20dp"
						        android:layout_alignParentRight="true"
						        android:layout_centerVertical="true"
						        android:background="@drawable/arrow"
						        />
						</RelativeLayout>
					</LinearLayout>
				</LinearLayout>		
			</ScrollView>
			<ImageButton 
			    android:id="@id/floatbutton"
			    android:layout_width="64dp"
			    android:layout_height="64dp"
			    android:layout_margin="20dp"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true"
			    android:visibility="gone"
			    android:scaleType="centerInside"
				android:paddingBottom="8dp"
			    android:background="@drawable/dynamic_add_cart"
			    />
		</RelativeLayout>
		<LinearLayout 
    	    android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/appbar" />
	</RelativeLayout>
</LinearLayout>