<?xml version="1.0" encoding="utf-8"?>

<!-- 发送去的信息item -->

<LinearLayout   
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@id/root_layout"    
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:orientation="vertical"
	>  
	<TextView 
	    android:id="@id/time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:background="@drawable/chat_time_block"
	    android:layout_gravity="center_horizontal"
	    android:text="2015-12-12"
	    android:textColor="@color/white"
	    android:textSize="12sp"
	    />
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    >
	    <com.zjcql.rebuildview.CircleImageView
		   	android:id="@id/icon"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:src="@drawable/icon"
            app:border_width="1dp"
           	app:border_color="@color/icon_border"
		    />
	    <TextView 
	        android:id="@id/text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/icon"
	        android:layout_marginLeft="40dp"
	        android:lineSpacingExtra="2dp"
	        android:gravity="left|center"
	        android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:textSize="14sp"
	        android:background="@drawable/chat_right_qp"
	        android:lineSpacingMultiplier="1.1"
	        />
	    <ProgressBar
            android:id="@id/progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text"
            android:layout_marginRight="-30dp"
            android:visibility="visible" 
            />
	    <ImageView
	        android:id="@id/answer"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text"
            android:layout_marginRight="-30dp"
            android:src="@drawable/chat_fail_resend_press"/>
	</RelativeLayout>
</LinearLayout>