<?xml version="1.0" encoding="utf-8"?>

<!-- 主界面的布局，导航至各功能模块 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  	android:background="@color/parens_back"
    >
    <LinearLayout 
        android:layout_width="match_parent"
     	android:layout_height="match_parent"
     	android:orientation="vertical" >
        <RelativeLayout
		    android:id="@id/bar"
		    android:layout_height="50dp"
		    android:layout_width="match_parent"
		    android:background="@color/primary"
		    >
	    <TextView 
	        android:id="@id/title"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_centerInParent="true"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:text="校园信息导航"/>
		</RelativeLayout>
		<RelativeLayout 
		    android:layout_width="match_parent"
            android:layout_height="match_parent"
		    >
		    <LinearLayout 
		        android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
		        >
		        <!-- Icon -->
			    <LinearLayout
			        android:id="@id/icon"
					android:layout_height="wrap_content"   
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:padding="10dp"
					android:layout_marginLeft="6dp"
					android:layout_marginTop="12dp"
					android:layout_marginRight="6dp"
					android:background="@drawable/cardback_pro"
					>  
					<RelativeLayout 
					    android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						>
					    <com.zjcql.rebuildview.CircleImageView 
					        android:id="@id/icon_image"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:src="@drawable/icon"
					        app:border_width="2dp"
            				app:border_color="@color/icon_border"
					        />
					    <RelativeLayout
					       	android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_toRightOf="@id/icon_image"
					        android:layout_marginLeft="10dp"
					        android:layout_centerVertical="true"
					        >
						    <TextView 
						        android:id="@id/icon_top"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:text="主人"
						        android:textColor="@color/primary_text"
						        android:textSize="18sp"
						        />
						    <TextView 
						        android:id="@id/icon_bottom"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_below="@id/icon_top"
						        android:singleLine="true"
						        android:ellipsize="end"
						        android:text="我的地盘我做主"
						        android:textColor="@color/secondary_text"
						        android:textSize="14sp"
						        />
					    </RelativeLayout>
					</RelativeLayout>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    >
					<!-- Contact -->
				    <LinearLayout
				        android:id="@id/contact"
						android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						android:layout_weight="1"
						android:orientation="horizontal"
						android:padding="10dp"
						android:layout_marginLeft="6dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="4dp"
						android:background="@drawable/cardback_pro"
						>  
						<RelativeLayout 
						    android:layout_height="wrap_content"   
							android:layout_width="match_parent"
							>
						    <ImageView
						        android:id="@id/image"
						        android:layout_width="50dp"
						        android:layout_height="50dp"
						        android:src="@drawable/icon_contact_pro"
						        />
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toRightOf="@id/image"
						        android:layout_centerVertical="true"
					        	android:layout_marginLeft="10dp"
						        android:text="社交"
						        android:textColor="@color/primary_text"
						        android:textSize="18dp"
						
						        />
						</RelativeLayout>
					</LinearLayout>
					<!-- Said -->
				    <LinearLayout
				        android:id="@id/said"
						android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						android:layout_weight="1"
						android:orientation="horizontal"
						android:padding="10dp"
						android:layout_marginLeft="4dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="6dp"
						android:background="@drawable/cardback_pro"
						>  
						<RelativeLayout 
						    android:layout_height="wrap_content"   
							android:layout_width="match_parent"
							>
						    <ImageView
						        android:id="@id/image"
						        android:layout_width="50dp"
						        android:layout_height="50dp"
						        android:src="@drawable/icon_say_pro"
						        />
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toRightOf="@id/image"
						        android:layout_centerVertical="true"
					        	android:layout_marginLeft="10dp"
						        android:text="吐槽"
						        android:textColor="@color/primary_text"
						        android:textSize="18dp"
						
						        />
						</RelativeLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    >
					<!-- Trade -->
				    <LinearLayout
				        android:id="@id/trade"
						android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						android:layout_weight="1"
						android:orientation="horizontal"
						android:padding="10dp"
						android:layout_marginLeft="6dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="4dp"
						android:background="@drawable/cardback_pro"
						>  
						<RelativeLayout 
						    android:layout_height="wrap_content"   
							android:layout_width="match_parent"
							>
						    <ImageView
						        android:id="@id/image"
						        android:layout_width="50dp"
						        android:layout_height="50dp"
						        android:src="@drawable/icon_trade_pro"
						        />
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toRightOf="@id/image"
						        android:layout_centerVertical="true"
					        	android:layout_marginLeft="10dp"
						        android:text="市场"
						        android:textColor="@color/primary_text"
						        android:textSize="18dp"
						
						        />
						</RelativeLayout>
					</LinearLayout>
					<!-- Notice -->
				    <LinearLayout
				        android:id="@id/notice"
						android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						android:layout_weight="1"
						android:orientation="horizontal"
						android:padding="10dp"
						android:layout_marginLeft="4dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="6dp"
						android:background="@drawable/cardback_pro"
						>  
						<RelativeLayout 
						    android:layout_height="wrap_content"   
							android:layout_width="match_parent"
							>
						    <ImageView
						        android:id="@id/image"
						        android:layout_width="50dp"
						        android:layout_height="50dp"
						        android:src="@drawable/icon_notice_pro"
						        />
						    <TextView 
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toRightOf="@id/image"
						        android:layout_centerVertical="true"
					        	android:layout_marginLeft="10dp"
						        android:text="公告"
						        android:textColor="@color/primary_text"
						        android:textSize="18dp"
						
						        />
						</RelativeLayout>
					</LinearLayout>
				</LinearLayout>
				<!-- Answer -->
			    <LinearLayout
			        android:id="@id/answer"
					android:layout_height="wrap_content"   
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:padding="10dp"
					android:layout_marginLeft="6dp"
					android:layout_marginTop="8dp"
					android:layout_marginRight="6dp"
					android:background="@drawable/cardback_pro"
					>  
					<RelativeLayout 
					    android:layout_height="wrap_content"   
						android:layout_width="match_parent"
						>
					    <ImageView
					        android:id="@id/image"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:src="@drawable/icon_answer_pro"
					        />
					    <RelativeLayout
					       	android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_toRightOf="@id/image"
					        android:layout_marginLeft="10dp"
					        android:layout_centerVertical="true"
					        >
						    <TextView 
						        android:id="@id/icon_top"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:text="答疑"
						        android:textColor="@color/primary_text"
						        android:textSize="18sp"
						        />
						    <TextView 
						        android:id="@id/icon_bottom"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_below="@id/icon_top"
						        android:text="校园App，长知识的地方"
						        android:textColor="@color/secondary_text"
						        android:textSize="14sp"
						        />
					    </RelativeLayout>
					</RelativeLayout>
				</LinearLayout>
		    </LinearLayout>
		    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_above="@id/night"
			    android:layout_centerHorizontal="true"
			    android:text="CampusAppV2_2.0"
			    android:textColor="#DBDBDB"
			     />
		    <TextView 
		        android:id="@id/night"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_centerHorizontal="true"
			    android:layout_marginBottom="20dp"
			    android:text="http://campusappv2.applinzi.com"
			    android:textColor="#DBDBDB"
			     />
		    <LinearLayout 
	    	    android:layout_width="match_parent"
	            android:layout_height="5dp"
	            android:background="@drawable/appbar" />
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
